<div class="row" id="row-1">

  <div class="container col-sm-5 newlist ">
    <div class="row">
      <h4>Select List</h4>
      <select id="selectlist">
        <% List.all.each do |list| %>
        <option value="<%= list.id %>"><%= list.name %></option>
        <% end %>
      </select>
    </div>
    <div class="row">
      <h4>Add new List</h4>
      <form method="post" action="/addlist">
        <input class="form-group" id="list_name" type="text" />
        <button type="submit" id="addtype" class="btn btn-primary">New list type</button>
      </form>
    </div>
  </div>

</div> <!-- complete the first screen row -->
